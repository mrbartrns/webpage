<%- include ./header %>
    <style>

        #content {
            /* min-width: 20em;
            min-height: 1.4em;
            max-width: 40em;
            max-height: 10em; */
            width: 40em;
            height: 30em;
            padding: 0.5em 0.5em 0 0.5em;
            background-color: white;
            font-size: large;
            text-align: left;
            border: 2px solid grey;
            border-radius: 5px;
            overflow-y: auto;
            margin: 1em 0;
        }

        #content:focus {
            border: 2px solid black;
            border-radius: 5px;
        }

        #content > * {
             /* padding: 0.35rem 0; */
             margin: 0.7rem 0;
        }


        #title {
            border: 2px solid grey;
            border-radius: 5px;
            width: 40em;
            padding: 0.5em 0.5em 0.5em 0.5em;
            font-size: large;
        }

        #title:focus {
            border: 2px solid black;
            border-radius: 5px;
        }

        .post-article {
            cursor: pointer;
            background-color: #77ba99;
            font-weight: 600;
            font-size: large;
            padding: 8px 16px;
            color: white;
            border: none;
            outline: none;
        }

        .post-article:focus, .post-article:hover, .post-article:active {
            background-color:  #659b80;
            border: none;
            outline: none;
        }

    </style>
    <div class="container">
        <form>
            <input type="text" name="title" id="title" placeholder="제목">
            <!-- <textarea rows="30" cols="100" name="contents" id="content"></textarea> -->
            <div name="contents" id="content" contenteditable="true">
                <% if (!post.contents) { %>
                    <p><br></p>
                <% } else { %>
                    <%- post.contents %>
                <% } %>
            </div>
            <!-- <input type="submit" value="제출" style="float: right;"> -->
        </form>
        <button type="button" class="post-article">글쓰기</button>
    </div>
