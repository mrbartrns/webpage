<script>
    window.onload = () => {
        const content = document.querySelector('#content');
        const submitBtn = document.querySelector('.post-article');
        const title = document.querySelector('#title');
        const titleValue = `<%= post.title %>`
        // content.addEventListener('change', handleText);

        function showTitle() {
            if (titleValue) {
                title.value = titleValue;
            }
        }

        function submitArticle() {
            if(!confirm('글을 게시하시겠습니까?')) return;
            fetch('/board/<%= board.url %>/<%= post._id %>/edit', {
                method: 'POST',
                body: JSON.stringify({
                    title: document.querySelector('#title').value,
                    contents: document.querySelector('#content').innerHTML
                }),
                headers: {
                    'Content-Type': 'application/json'
                },
                redirect: 'follow'
                }
            )
            .then(blob => blob.json())
            .then(res => {
                if(res.success) {
                    window.location.href = '/board/<%= post._board.url %>/<%= post._id %>';
                }
            })
        }

        content.addEventListener('input', (e) => {
            console.log(e.target);
            if(!e.target.innerHTML) {
                content.innerHTML = '<p><br></p>';
            }
        });

        showTitle();
        submitBtn.addEventListener('click', (submitArticle));

    }
    
</script>
